<% @json.each do |data| -%>
  Name: <strong><%= data['name'] %></strong> is a <strong><%= data['category'].downcase %></strong><br />
  <%= link_to 'Select this page', show_path(:id => data['id']) %><br />
  <hr />
<% end -%>

<% if @search[:page] > 1 %>
  <%= link_to('Prev.', search_path(:q => params[:q], :page => params[:page] - 1)) %>
<% end -%>

Page <%= @search[:page] %>

<% if @search[:more] %>
  <%= link_to 'Next', search_path(:q => params[:q], :page => @search[:page] + 1) %>
<% end -%>
